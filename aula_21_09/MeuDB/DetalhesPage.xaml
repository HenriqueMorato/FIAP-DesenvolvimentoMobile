<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeuDB.DetalhesPage">
	<ContentPage.Content>
		<StackLayout>
			<Entry x:Name="txtId" WidthRequest="150" HeightRequest="50"/>
			<Entry x:Name="txtNome" WidthRequest="150" HeightRequest="50"/>
			<Entry x:Name="txtEmail" WidthRequest="150" HeightRequest="50" Keyboard="Email" />
			<Entry x:Name="txtTelefone" WidthRequest="150" HeightRequest="50" Keyboard="Telephone" />
			<Button Text="Salvar" WidthRequest="50" HeightRequest="30" Clicked="savar_Clicked" />
			<Button Text="Cancelar" WidthRequest="50" HeightRequest="30" BackgroundColor="Red" TextColor="White" Clicked="cancelar_Clicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
